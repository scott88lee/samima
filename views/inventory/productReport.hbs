<div class="ui form">
<h4 class="ui dividing header">Product Report: {{product.brand}} - {{product.model}}</h4>
<div class="field">
  <div class="three fields">
    <div class="field">
      <input type="text" value="{{product.product_id}}" name="product_id" hidden readonly>
      <label>SKU</label>
      <input type="text" name="sku" tabindex="1" value="{{product.sku}}" readonly>
    </div>
    <div class="field">
      <label>Main Category</label>
      <div class="ui selection dropdown">
        <input type="hidden" name="cat" value="{{product.cat}}">
        <i class="dropdown icon"></i>
        <div class="default text">Category</div>
        <div class="menu">
          <div class="item" data-ref="ag" data-value="acoustic">Acoustic</div>
          <div class="item" data-ref="eg" data-value="electric">Electric</div>
          <div class="item" data-ref="uk" data-value="ukulele">Ukulele</div>
          <div class="item" data-ref="pa" data-value="proaudio">Pro-Audio</div>
          <div class="item" data-ref="ac" data-value="accessories">Accessories</div>
          <div class="item" data-ref="kb" data-value="keyboard">Keyboard</div>
          <div class="item" data-ref="dr" data-value="drums">Drums</div>
          <div class="item" data-ref="sv" data-value="services">Services</div>
        </div>
      </div>
    </div>
    <div class="field">
      <label>Brand</label>
      <input type="text" name="brand" tabindex="1" value="{{product.brand}}" readonly>
    </div>
    <div class="field">
      <label>Model</label>
      <input type="text" name="model" tabindex="1" value="{{product.model}}" readonly>
    </div>
  </div>
</div>
<div class="field">
  <div class="three fields">
    <div class="field">
      <label>S$ MSRP</label>
      <input type="number" min="0.01" step="0.01" name="msrp" tabindex="1" value="{{product.msrp}}" readonly>
    </div>
    <div class="field">
      <label>S$ MAP</label>
      <input type="number" min="0.01" step="0.01" name="map" tabindex="1" value="{{product.map}}" readonly>
    </div>
    <div class="field">
      <label>&nbsp;</label>
      <div class="ui toggle checkbox" style="margin-top:8px">
        {{#if product.physical_item}}
        <input type="checkbox" value="true" name="physical_item" tabindex="1" class="active" checked>
        {{else}}
        <input type="checkbox" value="true" name="physical_item" tabindex="1" class="active">
        {{/if}}
        <label>Physical item</label>
      </div>
    </div>
    <div class="field">
      <label>&nbsp;</label>
      <div class="ui toggle checkbox" style="margin-top:8px">
        {{#if product.deprecated}}
        <input type="checkbox" value="true" name="deprecated" tabindex="1" class="active" checked>
        {{else}}
        <input type="checkbox" value="true" name="deprecated" tabindex="1" class="active">
        {{/if}}
        <label>Deprecated</label>
      </div>
    </div>
    <div class="field">
      <label>&nbsp;</label>
      <div class="ui toggle checkbox" style="margin-top:8px">
        {{#if product.prod_init}}
        <input type="checkbox" value="true" name="prod_init" tabindex="1" class="active" checked>
        {{else}}
        <input type="checkbox" value="true" name="prod_init" tabindex="1" class="active">
        {{/if}}
        <label>Initialized</label>
      </div>
    </div>
  </div>
</div>
<div class="field">
  <label>Product Description</label>
  <div class="field">
    <input type="text" name="product_desc" tabindex="1" value="{{product.product_desc}}" readonly>
  </div>
</div>
</div>


<h4 class="ui dividing header">Purchases</h4>
<table class="ui table">
  <thead>
    <th>Date</th>  
    <th>Invoice</th>  
    <th>Purchase ID</th>  
    <th>Quantity</th>  
    <th>Price</th>  
    <th>Discount</th>  
    <th>Supplier</th>  
  </thead>
  {{#each product.purchases}}
  <tr>
    <td>{{this.date}}</td>
    <td>{{this.invoice}}</td>
    <td>{{this.pur_id}}</td>
    <td>{{this.quantity}}</td>
    <td>{{this.price}}</td>
    <td>{{this.disc}} % </td>
    <td>{{this.supplier}}</td>
  </tr>
  {{/each}}
</table>

<h4 class="ui dividing header">Sales</h4>
<table class="ui table">
  <thead>
    <th>Date</th>
    <th>Sale ID</th>
    <th>Source</th>
    <th>Reference</th>
    <th>Quantity</th>
    <th>Price</th>
  </thead>
  {{#each product.sales}}
  <tr>
    <td>{{this.date}}</td>
    <td>{{this.id}}</td>
    <td>{{this.source}}</td>
    <td>{{this.reference}}</td>
    <td>{{this.quantity}}</td>
    <td>{{this.price}}</td>
  </tr>
  {{/each}}
</table>